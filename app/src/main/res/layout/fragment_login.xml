<?xml version="1.0" encoding="utf-8"?> <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#335EFF"
    android:orientation="vertical">

    <Button
        android:id="@+id/login_bn"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_pass"
        android:layout_alignLeft="@+id/user_pass"
        android:layout_alignRight="@+id/user_pass"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="-10dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/button"
        android:elevation="2dp"
        android:selectAllOnFocus="true"
        android:shadowDx="500"
        android:shadowDy="500"
        android:shadowRadius="10"
        android:text="login"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#3F51B5" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_pass"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:focusable="true"
        android:hint="Enter username"
        android:imeOptions="actionNext"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:hint="Enter Password"
        android:imeOptions="actionDone"
        android:textColor="#FFFFFF"
        android:textColorHint="#F3FFFFFF" />

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="550dp"
        android:text="New User? Register Now"
        android:textColor="#FFFFFF"

        android:textColorHint="#FFFFFF" />
</RelativeLayout>




